<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Omal.Views.InformazioniAccountV" Title="{Binding TitoloModificaAccount, Converter={StaticResource UpperCaseConverter}}"
    >
     <ContentPage.ToolbarItems>
        <ToolbarItem Text="{Binding BtnEdit}" Command="{Binding EditCommand}" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Margin="5">
            <Label TextColor="{StaticResource BluOmal}" Style="{StaticResource WhiteEntry}" Text="{Binding StrEmail}"  />
            <Label TextColor="Black"  Text="{Binding Email}"  />
           <Label TextColor="{StaticResource BluOmal}" Style="{StaticResource WhiteEntry}" Text="{Binding StrNomeUtente}"   />
           <Label Text="{Binding NomeUtente}" TextColor="Black" />
           <Label TextColor="{StaticResource BluOmal}" Style="{StaticResource WhiteEntry}" Text="{Binding StrEmailBackOffice}"  />
           <Label Text="{Binding EmailBackOffice}" TextColor="Black" />
        </StackLayout>
            </ScrollView>
    </ContentPage.Content>
</ContentPage>

